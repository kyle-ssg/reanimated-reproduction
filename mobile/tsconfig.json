{
  "compilerOptions": {
    "types": ["jest"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "jsx": "react-native",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "common/*": ["../common/*"],
      "components/*": ["app/components/*"],
      "images/*": ["app/images/*"],
      "screens/*": ["app/screens/*"],
      "project/*": ["app/project/*"],
      "navigation/*": ["app/navigation/*"],
      "lodash": [
        "node_modules/lodash-es"
      ]
    },
    "target": "esnext",
    "skipLibCheck": true
  },
  "include": [
    "src/global.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "env/environment-variables.js",
    "jest.config.js"
  ]
}
