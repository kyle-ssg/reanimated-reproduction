{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "compileOnSave": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "paths": {
      "components/": ["./components/*"],
      "common/": ["./common/*"]
    },
    "target": "esnext"
  },
  "include": [],
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
